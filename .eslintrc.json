{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"env": {
		"node": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:obsidianmd/recommended"
	],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2020
	},
	"rules": {
		// Base rule overrides
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": [
			"error",
			{
				"args": "none",
				"varsIgnorePattern": "^_",
				"argsIgnorePattern": "^_",
				"caughtErrors": "none",
				"destructuredArrayIgnorePattern": "^_",
				"ignoreRestSiblings": true
			}
		],
		"@typescript-eslint/ban-ts-comment": "off",
		"no-prototype-builtins": "off",
		"@typescript-eslint/no-empty-function": "off",

		// Obsidian PR Review Requirements - Core Type Safety
		"@typescript-eslint/no-explicit-any": "error",
		"@typescript-eslint/no-non-null-assertion": "error",
		"@typescript-eslint/no-unsafe-assignment": "warn",
		"@typescript-eslint/no-unsafe-argument": "warn",
		"@typescript-eslint/no-unsafe-call": "warn",
		"@typescript-eslint/no-unsafe-member-access": "warn",

		// Console statement restrictions
		"no-console": [
			"error",
			{
				"allow": ["warn", "error"]
			}
		],

		// Additional Obsidian Plugin Store Requirements
		"@typescript-eslint/require-await": "error", // Catch async functions without await
		"@typescript-eslint/no-require-imports": "error", // Enforce ES6 imports over require()
		"no-case-declarations": "error", // Require braces around case block lexical declarations
		"@typescript-eslint/no-unnecessary-type-assertion": "error" // Remove redundant type assertions
	},
	"overrides": [
		{
			"files": ["src/logging.ts"],
			"rules": {
				"no-console": "off"
			}
		}
	]
}
